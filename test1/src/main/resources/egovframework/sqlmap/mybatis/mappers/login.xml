<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="login">
  <resultMap type="UserVO" id="UserMap">  
		<result column="user_id" property="user_id"/>
		<result column="email" property="email"/>
		<result column="password" property="password"/>
		<result column="name" property="name"/>
		<result column="loginMethod" property="loginMethod"/>
		<result column="isAdmin" property="isAdmin"/>
		<result column="created" property="created"/>
		<result column="updated" property="updated"/>
	</resultMap>
	
	<insert id="insertUser" parameterType="UserVO">
	
		INSERT INTO users_user
		(user_id,email,password,name,isAdmin,created,loginMethod)
		VALUES
		(#{user_id},#{email},#{password},#{name},#{isAdmin},#{created},#{loginMethod})
	
	</insert>
	
	<insert id="insertKakaoUser" parameterType="UserVO">
	
		INSERT INTO users_user
		(user_id,email,name,loginMethod,isAdmin,created)
		VALUES
		(#{user_id},#{email},#{name},#{loginMethod},#{isAdmin},#{created})
	
	</insert>
	
	<select id="selectName" resultType="UserVO">
	
		SELECT
			user_id,
			email,
			name
		FROM
			users_user
		WHERE
			user_id = #{user_id}
	
	</select>
	
	<select id="selectUserForemail" resultType="UserVO">
	
		SELECT
			user_id,
			email,
			password,
			name,
			isAdmin
		FROM 
			users_user
		WHERE
			email = #{email}
		
	</select>
	
	<select id="selectLoginMethod" resultType="string">
	
	SELECT
		loginMethod
	FROM 
		users_user
	WHERE
		email = #{email}
	
	</select>
</mapper>